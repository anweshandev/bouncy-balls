{
    "name": "Bouncy Balls - Manage noise with bouncing balls!",
    "short_name": "Bouncy Balls",
    "start_url": "/?source=pwa",
    "lang": "en-US",
    "orientation": "portrait",
    "dir": "ltr",
    "scope": "/",
